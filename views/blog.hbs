<h1 class="text-center text-bold">All Blog Posts</h2>
    {{#if somethingWentWrong}}
    <p>internal error</p>
    {{else}}
    {{#if blogPost}}
    <div class="container">
        <div clas="columns">
            <ul class="pagination bg-dark">
                {{#if previousPage}}
                <li class="page-item ">
                    <a href="/blog/{{previousPage}}" tabindex="-1">Previous</a>
                </li>
                {{else}}
                <li class="page-item disabled">
                    <a href="#">Previous</a>
                </li>
                {{/if}}
                {{#each page}}
                <li class="page-item">
                    <a href="/blog/{{this}}">{{this}}</a>
                </li>
                {{/each}}

                {{#if nextPage}}
                <li class="page-item ">
                    <a href="/blog/{{nextPage}}" tabindex="-1">Next</a>
                </li>
                {{else}}
                <li class="page-item disabled">
                    <a href="#">Next</a>
                </li>
                {{/if}}
            </ul>
        </div>
        <div class="columns">
            {{#each blogPost}}
            <div class="column col-12 ">
                <div class="card bg-dark">
                    <div class="card-header p-centered ">
                        <div class="card-title h6 text-break">{{title}}</div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <form action="/blog/post/{{id}}" class="d-inline-block">
                                <button class="btn btn-primary d-inline-block">visit</button>
                            </form>
                            <form class="d-inline-block" action="/blog/post/{{id}}/edit" class="d-inline-block"
                                method="GET">
                                <button class="btn btn-error">Edit</button>
                            </form>
                            <form action="/blog/delete-blog-post/{{id}}" class="d-inline-block" method="POST">
                                <button class="btn btn-error">delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{else}}
    <p>Sorry There are no blogPost</p>
    {{/if}}
    {{/if}}
    <a href="/blog/create-blog-post">
        <button class="btn btn-primary" value="create post">create post</button>
    </a>