{{#if somethingWentWrong}}
<p>internal error</p>
{{else}}
{{#if validationErrors.length}}
<p>Errors:</p>
<ul>
    {{#each validationErrors}}
    <li>{{this}}</li>
    {{/each}}
</ul>
{{/if}}
<form action="/guestbook/comment/{{guestbookId}}/editReply" method="POST">
    <div class="form-group">
        <label class="form-label" for="input-example-3">Message</label>
        <textarea class="form-input" id="input-example-3" name="reply" placeholder="enter a reply message" rows="3">{{reply.reply}}</textarea>
    </div>
    <button class="btn btn-primary" value="edit">edit</button>
</form>
{{/if}}