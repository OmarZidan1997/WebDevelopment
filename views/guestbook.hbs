{{#if somethingWentWrong}}
    <p class="text-break">internal error</p>
{{else}}
    {{#if validationErrors.length}}
        <p>Errors:</p>
        <ul>
            {{#each validationErrors}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    {{/if}}
    <div class="container"> 
        <form class="form-horizontal col-12" action="/blog/edit-blog-post/{{blogPost.id}}" method="POST">
            <div class="form-group">
                <div class="col-5 col-sm-12">
                    <input class="form-input" type="text" name="name" value="{{blogPost.title}}" placeholder="please enter title">
                </div>
                <div class="col-5 col-sm-12">
                    <input class="form-input" name="message" placeholder="write your content" >
                </div>
                
                <div class="col-2 col-sm-2">
                    <button class="btn btn-primary" value="edit post">submit</button>
                </div>
            </div>
        </form>
        <div class="divider"></div>
        <div class="column col-12">
            <table class="table table-striped table-hover bg-dark ">
                <thead>
                    <tr>
                    <th>name</th>
                    <th>genre</th>
                    <th>date</th>
                    <th>date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="active">
                    <td><span class="text-dark">dark color</span></td>
                    <td><span class="text-dark">dark color</span></td>
                    <td><span class="text-dark">dark k c</span></td>
                    <td> </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{{/if}}    