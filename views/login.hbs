<h1 class="text-center text-bold">Login</h1>
{{#if somethingWentWrong}}
<p>internal error</p>
{{else}}
{{#if validationErrors.length}}
<p>Errors:</p>
<ul>
    {{#each validationErrors}}
    <li>{{this}}</li>
    {{/each}}
</ul>
{{/if}}

<div class="container">
    <div class="columns">
        <div class="column col-4"></div>
        <div class="form-group column col-4 col-sm-12">
            <form action="/login" method="POST">
                <label class="form-label">ID</label>
                <input class="form-input" type="text" name="username" value="{{usernameEntered}}" placeholder="enter id  ">
                <label class="form-label">Password</label>
                <input class="form-input" type="password" name="password" value="{{passwordEntered}}" placeholder="enter password ">
                <button class="btn btn-primary" value="create post">submit</button>
            </form>
        </div>
        <div class="column col-4"></div>
    </div>
</div>
{{/if}}